@model IEnumerable<ViewModels.ViewModels.ZwierzeVM>
@{
    <table>
        <tr>
            <td>
                Rasa
            </td>
            <td>
                Gatunek
            </td>
            <td>
                Imie
            </td>
            <th>
            </th>
        </tr>
        @foreach (var zwierze in Model)
        {
            <tr>
                <td>@zwierze.Rasa</td>
                <td>@zwierze.Gatunek</td>
                <td>@zwierze.Imie</td>
                <td><a asp-action="Info" asp-route-id="@zwierze.Id">Info</a></td>
                <td><a asp-action="AddOrUpdate" asp-route-id="@zwierze.Id">Edytuj</a></td>
                <td><a asp-action="Delete" asp-route-id="@zwierze.Id">Usun</a></td>
            </tr>
        }
    </table>
    <a asp-controller="Zwierze" asp-action="AddOrUpdate" asp-route-id="0">Dodaj Zwierze</a>
}
