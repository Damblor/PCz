@model List<Lab1.Models.Position>
@{
	<h1>Pozycje:</h1>
	<table>
		@{
			<tr>
				<td>Nazwa</td>
				<th></th>
			</tr>
			@foreach (var position in Model)
			{
				<tr>
					<td>@position.Name</td>
					<td><a asp-action="AddOrUpdate" asp-route-id=@position.Id>Edytuj</a></td>
					<td><a asp-action="Delete" asp-route-id=@position.Id>Usuń</a></td>
				</tr>
			}
		}
	</table>
}
<p><a asp-controller="Position" asp-action="AddOrUpdate">Dodaj pozycje</a></p>
