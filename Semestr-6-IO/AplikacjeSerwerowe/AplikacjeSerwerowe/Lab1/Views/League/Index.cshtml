@model List<Lab1.Models.League>
@{
	<h1>Ligi:</h1>
	<table>
		@{
			<tr>
				<td>Nazwa</td>
				<th></th>
			</tr>
			@foreach (var league in Model)
			{
				<tr>
                    <td>@league.Name</td>
					<td><a asp-action="AddOrUpdate" asp-route-id=@league.Id>Edytuj</a></td>
					<td><a asp-action="Delete" asp-route-id=@league.Id>Usuń</a></td>
                </tr>
			}
		}
		</table>
}
<p><a asp-controller="League" asp-action="AddOrUpdate">Dodaj Ligę</a></p>
