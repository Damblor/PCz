@model List<Lab1.Models.Author>
@{
    <h1>Autorzy:</h1>
    <table>
        @{
            <tr>
                <td>Imię</td>
                <td>Nazwisko</td>
                <th></th>
            </tr>
            @foreach(var author in Model)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td><a asp-action="AddOrUpdate" asp-route-id=@author.Id>Edytuj</a></td>
                    <td><a asp-action="Delete" asp-route-id=@author.Id>Usuń</a></td>
                </tr>
            }
        }
    </table>
    <p><a asp-controller="Author" asp-action="AddOrUpdate">Dodaj Autora</a></p>
}
