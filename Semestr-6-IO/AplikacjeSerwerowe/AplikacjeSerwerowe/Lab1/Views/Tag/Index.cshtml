@model List<Lab1.Models.Tag>
@{
    <h1>Tagi:</h1>
    <table>
		@{
			<tr>
				<td>Nazwa</td>
				<th></th>
			</tr>
			@foreach (var tag in Model)
			{
				<tr>
					<td>@tag.Name</td>
					<td><a asp-action="AddOrUpdate" asp-route-id=@tag.Id>Edytuj</a></td>
					<td><a asp-action="Delete" asp-route-id=@tag.Id>Usuń</a></td>
				</tr>
			}
		}
    </table>
}
<p><a asp-controller="Tag" asp-action="AddOrUpdate">Dodaj Tag</a></p>