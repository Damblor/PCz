@model Lab1.Models.Player
@{
    <h1>@ViewBag.Header</h1>
    <form asp-route="AddOrUpdate" method="post">
        <input asp-for="Id" type="hidden">
        <p>
            <label asp-for="FirstName">Imie</label>
            <input asp-for="FirstName">
        </p>
        <p>
            <label asp-for="LastName">Nazwisko</label>
            <input asp-for="LastName">
        </p>
        <p>
            <label asp-for="Country">Kraj</label>
            <input asp-for="Country">
        </p>
        <p>
            <label asp-for="BirthDate">Data rodzenia</label>
            <input asp-for="BirthDate">
        </p>
        <p>
            <label asp-for="Team">Drużyna</label>
            <select asp-for="TeamId" asp-items="@ViewBag.teamList"></select>
        </p>
        <p>
            <label asp-for="Positions">Pozycje</label>
            @foreach (SelectListItem positon in @ViewBag.positionsList)
            {
                <p>
                    <label>@positon.Text</label>
                    @if (positon.Selected)
                    {
                        <input type="checkbox" name="Positions" value="@positon.Value" checked>
                    }
                    else
                    {
                        <input type="checkbox" name="Positions" value="@positon.Value">
                    }
                </p>
            }
        </p>
        <p>
            <button type="submit">@ViewBag.ButtonText</button>
        </p>
    </form>
}
