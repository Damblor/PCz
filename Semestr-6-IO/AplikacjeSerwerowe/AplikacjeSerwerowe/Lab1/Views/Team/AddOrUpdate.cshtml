@model Lab1.Models.Team
@{
	<h1>@ViewBag.Header</h1>
	<form asp-route="AddOrUpdate" method="post">
		<input asp-for="Id" type="hidden" />
		<p>
			<label asp-for="Name">Nazwa</label>
			<input asp-for="Name" />
		</p>
		<p>
			<label asp-for="Country">Państow</label>
			<input asp-for="Country" />
		</p>
		<p>
			<label asp-for="City">Miasto</label>
			<input asp-for="City" />
		</p>
		<p>
			<label asp-for="FoundingDate">Data założenia</label>
			<input asp-for="FoundingDate" />
		</p>
		<p>
			<label asp-for="League">Liga:</label>
			<select asp-for="LeagueId" asp-items="@ViewBag.Leagues"></select>
		</p>
		<p>
			<button type="submit">@ViewBag.ButtonText</button>
		</p>
	</form>
}
