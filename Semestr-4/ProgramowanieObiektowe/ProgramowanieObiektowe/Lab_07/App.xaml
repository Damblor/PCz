<Application x:Class="Lab__7.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lab__7"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" 
                   x:Key="equals_button_style">
                <Setter Property="Background" Value="#6d0811"/>
                <Setter Property="Foreground" Value="#dcddde"/>
                <Setter Property="FontSize" Value="26"/>
            </Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#40444b"/>
                <Setter Property="Foreground" Value="#dcddde"/>
                <Setter Property="FontSize" Value="26"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#42464d"/>
                        
                    </Trigger>
                </Style.Triggers>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
